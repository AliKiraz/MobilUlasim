                android:paddingTop="9dp"
                android:text="16 Kürkçüler-Üniversite"/>

            <Button
                android:id="@+id/btn16"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:textColor="#B5C2B7"
                android:background="@drawable/button"
                android:drawableLeft="@drawable/icon_bus"
                android:paddingTop="9dp"
                android:text="17 Dağkent-Üniversite"/>

            <Button
                android:id="@+id/btn17"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:textColor="#B5C2B7"
                android:background="@drawable/button"
                android:drawableLeft="@drawable/icon_bus"
                android:paddingTop="9dp"
                android:text="30 Üniversite Ring"/>

        </LinearLayout>

    </ScrollView>


</LinearLayout>