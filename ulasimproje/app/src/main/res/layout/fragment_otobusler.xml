                android:gravity="left"
                android:paddingTop="9dp"
                android:text="1 Çaydurt-Merkez"
                android:textColor="#B5C2B7"
                tools:ignore="TextContrastCheck" />

            <Button
                android:id="@+id/btn2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:textColor="#B5C2B7"
